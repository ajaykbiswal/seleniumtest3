package ExcelTest;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;

import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

public class ExcelTestScript {

	public ExcelTestScript(String filepath) throws Exception 
	{
		File src=new File(filepath);
		FileInputStream ofile=new FileInputStream(src);
		XSSFWorkbook wb=new XSSFWorkbook(ofile);
		XSSFSheet osheet=wb.getSheetAt(0);
		int rows=osheet.getLastRowNum();
		 for(int i=0;i<rows;i++){
			 String data=osheet.getRow(i).getCell(0).getStringCellValue();
			 System.out.println("The Vlaue Of Row is: "+data);
		 }
		
		wb.close();
			
	}

}
